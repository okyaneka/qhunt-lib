{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "module": "CommonJS",
    "outDir": "./dist",
    "paths": {
      "~/*": ["./*"]
    },
    "rootDir": "./",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6",
    "resolveJsonModule": true
  },

  "include": [
    "helpers/**/*",
    "models/**/*",
    "services/**/*",
    "validators/**/*",
    "index.ts"
  ],
  "exclude": ["node_modules"]
}
